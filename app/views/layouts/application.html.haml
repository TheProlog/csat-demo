!!! 5
%html
  %head
    %title Content Selection Automated Testing Demo
    %meta{'http-equiv'.to_sym => 'Content-Type', :content => 'text/html; charset=UTF-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    -# = stylesheet_link_tag    "_bootstrap"
    =# stylesheet_link_tag    "bootstrap_and_overrides"
    = stylesheet_link_tag    "application"
    -# = javascript_include_tag "dojo"
    = javascript_include_tag "application"

    = csrf_meta_tags
  %body(data-spy="scroll" data-target=".subnav" data-offset="50")
    -# = render 'layouts/top_nav_header'

    .container#all-content
      - flash.each do |name, msg|
        %div{:class => name == :notice ? "alert alert-success" : "alert alert-error"}
          %a.close(data-dismiss="alert") &times;
          = msg
      = yield
    = debug(params) if Rails.env.development?
